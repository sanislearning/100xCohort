datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider="prisma-client-js"
}

model User {
  id  Int  @id @default(autoincrement())
  name  String
  username  String @unique
  password  String
  todos Todo[]
}

model Todo {
  id Int @id @default(autoincrement())
  title String
  content String
  user User @relation(fields:[userId],references:[id])
  userId Int
}